<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/map"
            tools:context="com.example.android.vozie.MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment">
            <LinearLayout android:id="@+id/main_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="#FFF"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">
                    <ImageView android:id="@+id/vozie_logo"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:src="@drawable/vozie_logo"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <ImageView android:id="@+id/menu_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/menu_button"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                    <ImageView android:id="@+id/settings_button"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/settings_button"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <AutoCompleteTextView android:id="@+id/search_text"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:padding="24dp"
                    android:hint="@string/search_hint"
                    android:background="@drawable/search_bg"
                    android:completionThreshold="1"
                    android:gravity="end"
                    android:textColorHint="#000000"/>

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentBottom="true"
                        android:background="#99707070"
                        android:orientation="vertical">

                        <LinearLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button android:id="@+id/from_button"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/from"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/tofrom_bg"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="6dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="6dp"/>
                            <Button android:id="@+id/to_button"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/to"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/tofrom_bg"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="6dp"/>
                        </LinearLayout>

                        <Button android:id="@+id/ride_button"
                            android:layout_width="fill_parent"
                            android:layout_height="75dp"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ride_bg"
                            android:text="@string/ride_label"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout android:id="@+id/search_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:visibility="invisible">
                <LinearLayout android:id="@+id/search_layout"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:visibility="invisible"
                    android:elevation="5dp">
                    <TextView android:layout_height="50dp"
                        android:layout_width="match_parent"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="30sp"
                        android:text="@string/search_title"
                        android:gravity="center"/>
                    <EditText android:id="@+id/search_text_main"
                        android:layout_width="fill_parent"
                        android:layout_height="68dp"
                        android:textSize="16sp"
                        android:padding="24dp"
                        android:hint="@string/search_main_hint"
                        android:background="@drawable/search_bg"
                        android:gravity="end"
                        android:textColorHint="#000000"/>
                    <ListView android:id="@+id/search_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="90dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/result_list_border"/>
                </LinearLayout>

                <TextView android:id="@+id/top_rect"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FFF"
                    android:visibility="invisible"
                    android:layout_alignParentTop="true"/>
                <TextView android:id="@+id/bot_rect"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#FFF"
                    android:visibility="invisible"
                    android:layout_alignParentBottom="true"/>
                <TextView android:id="@+id/left_rect"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:visibility="invisible"
                    android:layout_alignParentStart="true"/>
                <TextView android:id="@+id/right_rect"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:visibility="invisible"
                    android:layout_alignParentEnd="true"/>

                <TextView android:id="@+id/map_mode_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_marginBottom="150dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible"/>

                <TextView android:id="@+id/map_mode_distance_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginBottom="120dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible"/>


                <LinearLayout
                    android:id="@+id/set_button_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible">
                    <Button android:id="@+id/set_as_from_search"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:background="@drawable/ride_button_disabled"
                        android:text="@string/from_search_label"
                        android:textColor="#FFFFFF"/>
                    <Button android:id="@+id/set_as_to_search"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:background="@drawable/ride_button_disabled"
                        android:text="@string/to_search_label"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </RelativeLayout>

            <Button android:id="@+id/yes_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/yes_bg_handler"
                android:text="@string/yes_label"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:elevation="5dp"/>
            <Button android:id="@+id/no_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/no_bg_handler"
                android:text="@string/no_label"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:elevation="5dp"/>
        </fragment>
    </FrameLayout>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>